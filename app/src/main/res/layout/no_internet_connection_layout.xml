<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/no_internet_connection_root_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/no_internet_connection_image_main"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:adjustViewBounds="true"
            android:background="@drawable/try_again_button_background"
            android:src="@drawable/ic_signal_wifi_off_white_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#454545"
            android:textAllCaps="true"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="No Connecion"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#454545"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="No internet connection found. Check your connection or try again."
            />

        <Button
            android:id="@+id/no_internet_connection_button_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#00000000"
            android:foreground="?android:selectableItemBackground"
            android:textColor="#454545"
            android:textAllCaps="true"
            android:text="try again"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</ScrollView>